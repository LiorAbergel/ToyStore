@model ToyStore.Models.Toy

@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toy Store</title>
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <div class="grid-container">
        <div class="left-column">
            <nav class="navbar  navbar-dark bg-dark align-items-center">

                <div class="container align-items-center">


                    <div class="collapse navbar-collapse justify-content-sm-center ">
                        <button onclick="toggleLogin()">Login</button>
                        <div id="loginForm" class="login-form">
                            <span class="close" onclick="closeLoginForm()">&times;</span>
                            <form>
                                <h2>Login</h2>
                                <label for="username">Username:</label>
                                <input type="text" id="username" name="username" required><br>
                                <label for="password">Password:</label>
                                <input type="password" id="password" name="password" required><br>
                                <button type="button" onclick="showRegisterForm()">Register</button>
                                <button type="submit">Login</button>
                            </form>
                            <form id="register" class="form" style="display: none;">
                                <h2>Register</h2>
                                <label for="reg_username">Username:</label>
                                <input type="text" id="reg_username" name="reg_username" required><br>
                                <label for="reg_password">Password:</label>
                                <input type="password" id="reg_password" name="reg_password" required><br>
                                <button type="submit">Register</button>
                            </form>
                        </div>
                        <ul class="navbar-nav flex-grow-1">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </div>
                </div>

            </nav>

        </div>
        <div class="right-column">
            <main>
                <div class="title-container">
                    <div class="search-bar">
                        <input type="search" placeholder="Search for toys">
                    </div>
                    <nav>
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><a href="#">All Discounts</a></li>
                            <li><a href="#">Gift Packs</a></li>
                            <li><a href="#">Cart</a></li>
                            <li><a href="#">Track Order</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="toys-container">
                    <section class="toy-layer">
                        <div class="nav-box">
                            <h2>Featured Items</h2>
                            <div class="product-grid">
                                <article class="product-card">
                                    <img src="product1.jpg" alt="Product 1">
                                    <h3>Product Name</h3>
                                    <p>$29.99</p>
                                </article>
                            </div>
                        </div>
                    </section>
                    <!-- Repeat sections for more featured items -->
                    <section class="functionality-layer">
                        <!-- Add functionality elements here, e.g., additional search options, filters, etc. -->
                    </section>
                </div>
            </main>

        </div>
    </div>
    <footer>
        <p>&copy; 2024 Toy Store</p>
        <div class="social-links">
            <a href="#"><img src="facebook.svg" alt="Facebook"></a>
            <a href="#"><img src="instagram.svg" alt="Instagram"></a>
        </div>
    </footer>
    <script src="~/Scripts/script.js"></script>
</body>
</html>