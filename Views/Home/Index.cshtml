@model ToyStore.ViewModel.CustomerViewModel


@{Layout = "/Views/Shared/_Layout.cshtml";}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toy Store</title>
    <link rel="stylesheet" href="~/Styles/home.css">
</head>

<body>
    <!-- Your content goes here -->
    <div class="grid-container">

        <div class="left-column"></div>

        <div class="right-column">
            @*<main>*@
                <div class="title-container">
                    <nav>
                        <ul>
                            <li><a href="#">All Discounts</a></li>
                            <li><a href="#">Gift Packs</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="toys-container">
                    <section class="toy-layer">
                        <div class="nav-box">
                            <h2>Featured Items</h2>
                            <div class="product-grid">
                                <article class="product-card">
                                    <img src="product1.jpg" alt="Product 1">
                                    <h3>Product Name</h3>
                                    <p>$29.99</p>
                                </article>
                            </div>
                        </div>
                    </section>
                    <!-- Repeat sections for more featured items -->
                    <section class="functionality-layer">
                        <!-- Add functionality elements here, e.g., additional search options, filters, etc. -->
                    </section>
                </div>
            @*</main>*@
        </div>
    </div>
    <script src="~/Scripts/Home/HomeScript.js"></script>
</body>
</html>